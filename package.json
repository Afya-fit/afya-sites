{
  "name": "@afya/sites",
  "version": "1.0.3",
  "description": "Afya Sites - Site Builder and Renderer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build && tsc -p tsconfig.json && npm run copy-css",
    "start": "next start -p 3001",
    "build:package": "tsc -p tsconfig.json && npm run copy-css",
    "build:shared": "npm run build:package && node scripts/build-shared-assets.js",
    "build:public-renderer": "webpack --config webpack.public-renderer.js",
    "build:shared-renderer": "npm run build:public-renderer && node scripts/build-shared-renderer.js",
    "copy-css": "find src -name '*.css' | while read file; do mkdir -p \"dist/$(dirname \"${file#src/}\")\"; cp \"$file\" \"dist/${file#src/}\"; done",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "npx jest --runInBand",
    "lint": "eslint src/ --ext .ts,.tsx --format=stylish",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "style": "stylelint \"src/**/*.module.css\" --formatter=compact",
    "style:fix": "stylelint \"src/**/*.module.css\" --fix",
    "framework:validate": "npm run lint && npm run style && npm run test && npm run build:package",
    "framework:check": "node scripts/framework-check.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "afya",
    "sites",
    "site-builder",
    "renderer"
  ],
  "author": "Afya",
  "license": "MIT",
  "dependencies": {
    "@iconify/icons-lucide": "^1.2.135",
    "@iconify/icons-simple-icons": "^1.2.74",
    "@iconify/react": "^6.0.2",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "babel-jest": "^29.7.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.24.0",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-use-logical": "^2.1.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
